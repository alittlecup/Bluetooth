<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:background="@color/graybackground"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_hight"
            android:text="注册"
            android:gravity="center"
            android:textSize="@dimen/title_bar_textsize"
            style="@style/base_text"/>

        <Space
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="0.6" />

        <EditText
            android:id="@+id/editPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/inputPhone"
            />
        <EditText
            android:id="@+id/editPwd"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入密码"
            />
        <EditText
            android:id="@+id/editPwdConfim"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请确认密码"
            />
        <Button
            android:layout_marginTop="40dp"
            android:text="注册"
            android:textSize="20sp"
            android:onClick="onRegiestClick"
            style="@style/base_btn"/>

        <Space
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

</layout>
