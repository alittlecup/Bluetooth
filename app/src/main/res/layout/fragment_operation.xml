<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    tools:context="com.example.hbl.bluetooth.OperationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:baselineAligned="false"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlTee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_white_stocke"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/imTee"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/tee" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="40dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="电量显示区"
                android:textColor="@color/app_bg_color" />

            <com.xw.repo.BubbleSeekBar
                android:id="@+id/sbTee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imTee"
                android:layout_marginTop="20dp"
                app:bsb_auto_adjust_section_mark="true"
                app:bsb_bubble_color="@color/colorAccent"
                app:bsb_bubble_text_size="18sp"
                app:bsb_max="100"
                app:bsb_min="40"
                app:bsb_second_track_color="@color/colorAccent"
                app:bsb_section_count="6"
                app:bsb_section_text_color="@color/text"
                app:bsb_section_text_position="below_section_mark"
                app:bsb_section_text_size="18sp"
                app:bsb_seek_by_section="true"
                app:bsb_show_section_mark="true"
                app:bsb_show_section_text="true"
                app:bsb_show_thumb_text="true"
                app:bsb_thumb_color="@color/colorAccent"
                app:bsb_track_color="@color/colorPrimary" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlPants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_white_stocke"
            android:clickable="false"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/imPans"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/pants" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="40dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="电量显示区"
                android:textColor="@color/app_bg_color" />

            <com.xw.repo.BubbleSeekBar
                android:id="@+id/sbPans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imPans"
                android:layout_marginTop="20dp"
                app:bsb_auto_adjust_section_mark="true"
                app:bsb_bubble_color="@color/colorAccent"
                app:bsb_bubble_text_size="18sp"
                app:bsb_max="100"
                app:bsb_min="40"
                app:bsb_second_track_color="@color/colorAccent"
                app:bsb_section_count="6"
                app:bsb_section_text_color="@color/text"
                app:bsb_section_text_position="below_section_mark"
                app:bsb_section_text_size="18sp"
                app:bsb_seek_by_section="true"
                app:bsb_show_section_mark="true"
                app:bsb_show_section_text="true"
                app:bsb_show_thumb_text="true"
                app:bsb_thumb_color="@color/colorAccent"
                app:bsb_track_color="@color/colorPrimary" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_coner_stoke"
            android:gravity="center_vertical"
            android:padding="5dp">

            <TextView
                style="@style/base_text"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="定时"
                android:textSize="20dp" />

            <com.xw.repo.BubbleSeekBar
                android:id="@+id/sbTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                app:bsb_auto_adjust_section_mark="true"
                app:bsb_bubble_color="@color/colorAccent"
                app:bsb_bubble_text_size="18sp"
                app:bsb_max="60"
                app:bsb_min="0"
                app:bsb_second_track_color="@color/colorAccent"
                app:bsb_section_count="2"
                app:bsb_section_text_color="@color/text"
                app:bsb_section_text_position="below_section_mark"
                app:bsb_section_text_size="18sp"
                app:bsb_seek_by_section="true"
                app:bsb_show_section_mark="true"
                app:bsb_show_section_text="true"
                app:bsb_show_thumb_text="true"
                app:bsb_thumb_color="@color/colorAccent"
                app:bsb_track_color="@color/colorPrimary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btnStart"
                style="@style/base_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="开始" />

            <Button
                android:id="@+id/btnSave"
                style="@style/base_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="模式存储" />
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimaryDark"></android.support.v4.view.ViewPager>
    </LinearLayout>
</ScrollView>
